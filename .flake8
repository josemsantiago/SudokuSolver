[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .pytest_cache,
    node_modules

per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811

max-complexity = 10
